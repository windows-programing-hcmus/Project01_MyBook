                           FontSize="16"
                           FontWeight="Medium"
                           Foreground="#8152CB"></Label>
                    <StackPanel Orientation="Vertical"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Center"
                                Width="218"
                                Margin="0,50,0,0">

                        <Border 
                                CornerRadius="10"
                                Margin="10,0,0,10">
                            <materialDesign:Card
                        Background="#FFFEC007"
                        HorizontalAlignment="Center" 
                        Width="200"
                        Height="100" 
                        Margin="0">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="1*"/>
                                        <RowDefinition Height="1*"/>
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="0" >
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon 
                        Kind="BookAlphabet"
                        Width="34" 
                        Height="44" 
                        Cursor="Hand" 
                        Foreground="White" 
                        Margin="2 2 2 0" />
                                            <TextBlock
                                Text="Sản phẩm hiện có"
                                HorizontalAlignment="Left"
                                Margin="5,20,0,0" 
                                TextWrapping="Wrap" 
                                VerticalAlignment="Top" 
                                FontSize="15" 
                                Foreground="White" 
                                FontWeight="Medium"/>
                                        </StackPanel>

                                    </Grid>

                                    <Grid 
                                Width="50" 
                                Height="50"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Margin="0,3,5,0">

                                    </Grid>
                                    <Grid Grid.Row="1" >
                                        <TextBlock Text="{Binding ongoingBooks}"
                                        TextAlignment="Center"
                                       FontWeight="Medium"
                                       FontSize="32"
                                       Foreground="Red"
                                                   x:Name="soldItems"
                                       Margin="20,5,20,0"></TextBlock>
                                    </Grid>
                                </Grid>
                            </materialDesign:Card>
                        </Border>

                        <Border 
                                CornerRadius="10"
                                Margin="10,0,0,10">
                            <materialDesign:Card
                        Background="#FF2195F2"
                        HorizontalAlignment="Center" 
                        Width="200"
                        Height="100" 
                        Margin="0">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="1*"/>
                                        <RowDefinition Height="1*"/>
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="0" >
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon 
                        Kind="Output"
                        Width="34" 
                        Height="44" 
                        Cursor="Hand" 
                        Foreground="White" 
                        Margin="2 2 2 0" />
                                            <TextBlock
                                Text="Sản phẩm đã bán"
                                Margin="5,20,0,0" 
                                TextWrapping="Wrap" 
                                VerticalAlignment="Top" 
                                FontSize="15" 
                                Foreground="White" 
                                FontWeight="Medium" RenderTransformOrigin="0.565,0.048" Height="15"/>
                                        </StackPanel>
                                    </Grid>

                                    <Grid 
                                Width="50" 
                                Height="50"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Margin="0,3,5,0">
                                        <Ellipse Margin="5,5,5,5" RenderTransformOrigin="-0.163,0.402">
                                            <Ellipse.Fill>
                                                <ImageBrush ImageSource="{Binding now, Converter={StaticResource absoluteConverter}}"/>
                                            </Ellipse.Fill>
                                        </Ellipse>
                                    </Grid>
                                    <Grid Grid.Row="1" >
                                        <TextBlock Text="{Binding soldBooks}"
                                        TextAlignment="Center"
                                       FontWeight="Medium"
                                       FontSize="32"
                                       Foreground="Red"
                                       Margin="20,5,20,0"></TextBlock>
                                    </Grid>
                                </Grid>
                            </materialDesign:Card>
                        </Border>

                        <Border 
                                CornerRadius="10"
                                Margin="10,0,0,10">
                            <materialDesign:Card
                        Background="#03fce3"
                        HorizontalAlignment="Center" 
                        Width="200"
                        Height="100" 
                        Margin="0">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="1*"/>
                                        <RowDefinition Height="1*"/>
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="0" >
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon 
                        Kind="NewReleases"
                        Width="34" 
                        Height="44" 
                        Cursor="Hand" 
                        Foreground="White" 
                        Margin="2 2 2 0" />
                                            <TextBlock
                                Text="Đơn hàng mới"
                                HorizontalAlignment="Left"
                                Margin="5,20,0,0" 
                                TextWrapping="Wrap" 
                                VerticalAlignment="Top" 
                                FontSize="15" 
                                Foreground="White" 
                                FontWeight="Medium"/>
                                        </StackPanel>
                                    </Grid>

                                    <Grid 
                                Width="50" 
                                Height="50"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Margin="0,3,5,0">
                                        <Ellipse Margin="5,5,5,5" RenderTransformOrigin="-0.163,0.402">
                                            <Ellipse.Fill>
                                                <ImageBrush ImageSource="{Binding now, Converter={StaticResource absoluteConverter}}"/>
                                            </Ellipse.Fill>
                                        </Ellipse>
                                    </Grid>
                                    <Grid Grid.Row="1" >
                                        <TextBlock Text="{Binding newOrders}"
                                        TextAlignment="Center"
                                       FontWeight="Medium"
                                       FontSize="32"
                                       Foreground="Red"
                                       Margin="20,5,20,0"></TextBlock>
                                    </Grid>
                                </Grid>
                            </materialDesign:Card>
                        </Border>


                    </StackPanel>
                </Grid>




            </Grid>
        </Grid>
    </Border>


</Window>
