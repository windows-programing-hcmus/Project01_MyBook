                            </Canvas>
                        </Border>

                        <Border CornerRadius="50" Width="36">
                            <Border.Background>
                                <SolidColorBrush Color="White" Opacity="0.6"/>
                            </Border.Background>
                            <Button Style="{DynamicResource CloseButton}" x:Name="closeButton" BorderThickness="0" Height="24" Width="24"
                             Click="closeButton_Click">
                                <Button.Background>
                                    <ImageBrush ImageSource="{Binding close, Converter={StaticResource absoluteConverter}}"/>
                                </Button.Background>
                            </Button>
                        </Border>
                    </StackPanel>
                </Grid>
                <!--Row - 2-->
                <Grid Grid.Row="1">
                    <Label Content="Chọn ngày:"
                           Margin="10,10,10,75"
                           FontSize="16"
                           FontWeight="Bold" Foreground="Black"></Label>

                    <Label x:Name="selected"
                           Margin="0,10,0,75"
                           HorizontalAlignment="Right"
                           FontSize="16"
                           FontWeight="Medium" Width="121"></Label>
                    <DatePicker x:Name="datePicker"
                                SelectedDateChanged="datePicker_SelectedDateChanged"
