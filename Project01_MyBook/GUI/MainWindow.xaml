                                                <TextBlock Margin="5,0,0,5">
                                                    <Label  Content="Số lượng:"
                                                            FontSize="10"></Label>
                                                    <Label  Content="{Binding bookQuantity}"
                                                            FontSize="10" FontWeight="Medium"></Label>
                                                </TextBlock>
                                            </StackPanel>

                                        </Border>
                                    </DataTemplate>
                                </ListView.ItemTemplate>

                            </ListView>
                        </StackPanel>

                    </Border>
                </Grid>
            </Grid>
            <Grid Grid.Column="2" Grid.Row="0"
                  Background="WhiteSmoke">

                <!--using border element above for child-->
                <Grid.OpacityMask>
                    <VisualBrush Visual="{Binding ElementName=border}" />
                </Grid.OpacityMask>

                <Grid.RowDefinitions>
                    <RowDefinition Height="134*"/>
                    <RowDefinition Height="130*"/>
                    <RowDefinition Height="457*"/>
                </Grid.RowDefinitions>

                <!--Row - 1-->
                <Grid Grid.Row="0" HorizontalAlignment="Center" Width="224" DataContext="{Binding _icons}">
