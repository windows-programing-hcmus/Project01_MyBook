            Grid.ColumnSpan="3"
            Grid.RowSpan="2"
            Background="White"
            UniformCornerRadius="10"
            Padding="10"
            Margin="25, 20, 25, 0">

                                <TabControl Name="chartTabControl" SelectionChanged="chartTabControl_SelectionChanged" SelectedIndex="{Binding tabSelectedIndex}">
