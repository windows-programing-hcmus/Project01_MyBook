                                <lvc:Axis Title="Revenue" LabelFormatter="{Binding currencyLabelFormatter}"></lvc:Axis>
                            </lvc:CartesianChart.AxisY>
                            -->
                                            </lvc:CartesianChart>
                                        </Grid>
                                    </TabItem>
                                    <TabItem Header="Profit">
